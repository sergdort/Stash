{
  "name": "stash",
  "version": "0.1.0",
  "description": "Pocket-like local-first CLI for saving and organizing links.",
  "type": "module",
  "packageManager": "pnpm@10.16.1",
  "bin": {
    "stash": "dist/apps/cli/src/cli.js"
  },
  "scripts": {
    "setup": "pnpm run build && pnpm exec playwright install chromium && node scripts/with-env.mjs node dist/apps/cli/src/cli.js db migrate --json",
    "build": "tsc -p tsconfig.json",
    "check": "pnpm run lint && pnpm run format:check && pnpm run build",
    "dev": "node scripts/with-env.mjs tsx apps/cli/src/cli.ts",
    "dev:api": "pnpm run dev -- web",
    "dev:web": "pnpm --dir apps/web dev",
    "dev:stack": "node scripts/dev-web-stack.mjs",
    "lint": "biome lint . --error-on-warnings",
    "lint:fix": "biome lint . --write --error-on-warnings",
    "lint:strict": "biome check . --error-on-warnings",
    "lint:strict:fix": "biome check . --write --error-on-warnings",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "test": "pnpm run build && vitest run",
    "test:integration": "pnpm run build && vitest run apps/cli/test/integration.test.ts",
    "start": "node scripts/with-env.mjs node dist/apps/cli/src/cli.js",
    "web": "pnpm run build && pnpm --dir apps/web build && node scripts/with-env.mjs node dist/apps/cli/src/cli.js web",
    "db:generate": "drizzle-kit generate",
    "predb:migrate": "pnpm run build",
    "db:migrate": "node scripts/with-env.mjs node dist/apps/cli/src/cli.js db migrate",
    "predb:doctor": "pnpm run build",
    "db:doctor": "node scripts/with-env.mjs node dist/apps/cli/src/cli.js db doctor"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^11.8.1",
    "commander": "^13.1.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.39.3",
    "fastify": "^5.6.1",
    "linkedom": "^0.18.12",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.10",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
