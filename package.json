{
  "name": "stash",
  "version": "0.1.0",
  "description": "Pocket-like local-first CLI for saving and organizing links.",
  "type": "module",
  "packageManager": "pnpm@10.16.1",
  "bin": {
    "stash": "dist/cli.js"
  },
  "scripts": {
    "setup": "pnpm run build && node dist/cli.js db migrate --json",
    "build": "tsc -p tsconfig.json",
    "check": "pnpm run lint && pnpm run format:check && pnpm run build",
    "dev": "tsx src/cli.ts",
    "lint": "biome lint . --error-on-warnings",
    "lint:fix": "biome lint . --write --error-on-warnings",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "test": "pnpm run build && vitest run",
    "test:integration": "pnpm run build && vitest run test/integration.test.ts",
    "start": "node dist/cli.js",
    "db:generate": "drizzle-kit generate",
    "predb:migrate": "pnpm run build",
    "db:migrate": "node dist/cli.js db migrate",
    "predb:doctor": "pnpm run build",
    "db:doctor": "node dist/cli.js db doctor"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^11.8.1",
    "commander": "^13.1.0",
    "drizzle-orm": "^0.39.3",
    "linkedom": "^0.18.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.10",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
